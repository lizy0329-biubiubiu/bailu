{
  "name": "@bailu/monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.14.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "taze": "taze minor -wIr && pnpm -r --parallel run update-post",
    "dev": "nr stub",
    "play": "pnpm -C playground run dev",
    "format": "prettier --cache --ignore-path .eslintignore --write ./ ",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --cache --fix"
  }
}
